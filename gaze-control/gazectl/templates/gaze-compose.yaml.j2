version: '3'

networks:
  internal:

volumes:
  servicevol:

services:
  plex:
    image: plexinc/pms-docker:latest
    environment:
      - PLEX_CLAIM="{{plex_claim}}"
      - ADVERTISE_IP="{{plex_ip}}"
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ./media/radarr/movies:/data/movies
      - ./media/sonarr/series:/data/tv
      - ./media/plex/config/:/config
      - /tmp/transcode/:/transcode
    networks:
      - internal
    ports:
      - "32400:32400"
    restart: always
    labels:
      - "gaze.service=plex"

  plexpy:
    image: linuxserver/plexpy:latest
    volumes:
      - ./media/plexpy:/config
      - ./media/plex/config/Library/Application\ Support/Plex\ Media\ Server/Logs:/logs:ro
    depends_on:
      - plex
    networks:
      - internal
    ports:
      - "8181:8181"
    restart: always
    labels:
      - "gaze.service=plexpy"

  transmission:
    image: linuxserver/transmission:latest
    networks:
      - internal
    environment:
      - PUID={{uid}}
      - PGID={{gid}}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ./media/transmission/config/:/config
      - ./media/transmission/downloads/:/downloads
    restart: always
    ports:
      - "9091:9091"
    labels:
      - "gaze.service=transmission"

  sonarr:
    image: linuxserver/sonarr:latest
    networks:
      - internal
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /dev/rtc:/dev/rtc:ro
      - ./media/sonarr/series:/tv
      - ./media/sonarr/config:/config
      - ./media/transmission/downloads/:/downloads
    environment:
      - PUID={{uid}}
      - PGID={{gid}}
    depends_on:
      - transmission
    restart: always
    ports:
      - "8989:8989"
    labels:
      - "gaze.service=sonarr"

  radarr:
    image: linuxserver/radarr:latest
    networks:
      - internal
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /dev/rtc:/dev/rtc:ro
      - ./media/radarr/movies:/movies
      - ./media/radarr/config:/config
      - ./media/transmission/downloads/:/downloads
    environment:
      - PUID={{uid}}
      - PGID={{gid}}
    depends_on:
      - transmission
    restart: always
    ports:
      - "7878:7878"
    labels:
      - "gaze.service=radarr"

  jackett:
    image: linuxserver/jackett:latest
    networks:
      - internal
    volumes:
      - ./media/jackett/config/:/config
      - ./media/transmission/downloads/:/downloads
    environment:
      - PUID={{uid}}
      - PGID={{gid}}
    restart: always
    ports:
      - "9117:9117"
    labels:
      - "gaze.service=jackett"

  ombi:
    image: linuxserver/ombi
    networks:
      - internal
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ./media/ombi/config:/config
    environment:
      - PUID={{uid}}
      - PGID={{gid}}
    depends_on:
      - plex
      - sonarr
      - radarr
    restart: always
    ports:
      - "3579:3579"
    labels:
      - "gaze.service=ombi"
